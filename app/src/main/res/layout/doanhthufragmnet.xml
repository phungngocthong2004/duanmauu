<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/btntungay"
            android:text="Từ Ngày"
            android:background="@drawable/deginbtn"
            />

        <EditText
            android:id="@+id/edtungayyy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="dd/MM/yyyy"
            android:minHeight="48dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/btndenngay"
            android:text="Đến Ngày"
            android:background="@drawable/deginbtn"
            />

        <EditText
            android:id="@+id/eddenngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="dd/MM/yyyy"
            android:minHeight="48dp" />


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/btntinhdoanhthu"
        android:background="@drawable/deginbtn"
        android:text="Tính Doanh thu"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvdoanhthu"
        android:text="VND"
        android:textSize="25dp"
        android:textStyle="bold"/>

</LinearLayout>